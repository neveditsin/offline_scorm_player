<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Mock LRS</display-name>
	<servlet>
		<servlet-name>Mock LRS</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<!-- init-param>
	       <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
	       <param-value>true</param-value>
        </init-param-->
        <init-param>
       	 	<param-name>jersey.config.property.classpath</param-name>
        	<param-value>/classes/mocklrs</param-value>
    	</init-param>
        <init-param>
       	 	<param-name>jersey.config.server.provider.packages</param-name>
        	<param-value>mocklrs</param-value>
    	</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Mock LRS</servlet-name>
		<url-pattern>/lrs/*</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>Local Derby</description>
		<res-ref-name>jdbc/TestDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
